<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/appwidget_dark_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="2"
    tools:ignore="ContentDescription,HardcodedText"
    tools:layout_height="130dp">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inAnimation="@anim/fragment_open_enter"
        android:outAnimation="@anim/fragment_open_exit">

        <FrameLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewHeadphones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher" />

        </FrameLayout>

        <include
            layout="@layout/widget_playing_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/button_shuffle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appwidget_button_left"
            android:src="@drawable/shuffle_off" />

        <ImageButton
            android:id="@+id/button_prev"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appwidget_button_center"
            android:src="@drawable/ic_skip_previous_white_36dp" />

        <ImageButton
            android:id="@+id/button_play_pause"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appwidget_button_center"
            android:src="@drawable/ic_play_arrow_white_36dp" />

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appwidget_button_center"
            android:src="@drawable/ic_skip_next_white_36dp" />

        <ImageButton
            android:id="@+id/button_stop"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appwidget_button_right"
            android:src="@drawable/ic_stop_white_36dp" />

    </LinearLayout>

</LinearLayout>